<% layout('layouts/boilerplate')%>
    <section class="container-fluid">
        <div class="col-lg-12" id="map" style="width: 100%; height: 500px;"></div>
    </section>
    <center class="my-5">
        <h1>Hello from YelpCamp</h1>
    </center>
    <section class="container">
        <div class="row">
            <% for( let campground of campgrounds) { %>
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <img class="img-fluid" src="<%= campground.image[0].url%> " alt="...">
                            </div>
                            <div class="col-md-8 mt-3">
                                <h5 class="card-title" style="color: blueviolet; font-weight: bolder;">
                                    <%= campground.title %>
                                </h5>
                                <p class="card-text">
                                    <%= campground.discription %>
                                </p>
                                <p class="card-text text-muted">
                                    <%= campground.location %>
                                </p>
                                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary px-4 mb-3">Show
                                    Details</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </section>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds= {features:<%-JSON.stringify(campgrounds)%>};
    </script>
    <script src="/js/clusterMap.js"></script>