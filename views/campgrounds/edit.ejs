<% layout('layouts/boilerplate')%>
    <center class="my-5">
        <h1>Edit <%= campgrounds.title %> CampGround</h1>
    </center>
    <div class="container p-5">
    <div class="row mb-5">
        <div class="col-lg-6 offset-lg-3">
            <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT " class="validated-form" method="POST"
                novalidate enctype="multipart/form-data">
                <div class="form-group mb-2">
                    <label class="form-label" for="camp-title">Edit CampGround Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="camp-title"
                        value="<%= campgrounds.title %> " placeholder="Campground" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Must Enter CampGround Title
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label" for="camp-location">Edit campGround Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="camp-location"
                        value="<%= campgrounds.location %> " placeholder="Location" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Must Enter CampGround Location
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label" for="camp-image">Edit campGround image</label>
                    <input class="form-control" type="file" name="campground[image]" id="camp-image" multiple>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Must Enter CampGround Image
                    </div>
                </div>
                <div class="my-2">
                    <label for="form-label" for="">Enter campGround Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id="price" name="campground[price]"
                            aria-label="Amount (to the nearest dollar)" value="<%= campgrounds.price %> " required>
                        <span class="input-group-text">.00</span>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                        <div class="invalid-feedback">
                            Must Enter CampGround Price
                        </div>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label" for="camp-discription">Edit campGround discription</label>
                    <textarea class="form-control" type="text" name="campground[discription]" id="camp-discription"
                        placeholder="discription" required><%= campgrounds.discription %></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Must Enter CampGround Description
                    </div>
                </div>
                <div class="my-3 d-flex align-items-center">
                    <% campgrounds.image.forEach(function (img,i) { %>
                        <img class="img-thumbnail my-2" src="<%= img.thumbnail %>" alt="...">
                        <div class="form-check-inline mx-3">
                            <input type="checkbox" id="image<%= i %>" name="deleteImage[]" value="<%= img.filename %>">
                            <label for="image<%= i %>">Delete?</label>
                        </div>
                        <% }) %>
                </div>
                <div class="form-group my-2">
                    <button class="btn btn-info btn-sm mb-2" style="color: white;">Edit Campgournd</button>
                </div>
            </form>
            <button class="btn btn-primary btn-sm"><a href="/campgrounds"
                    style="text-decoration: none; color: white;">All
                    Campground</a></button>
        </div>
    </div>
</div>